<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" id="WebApp_ID" version="4.0">
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  <servlet>
    <servlet-name>myHelloServlet</servlet-name>
    <servlet-class>com.jm2181222.servlet.RegistrationServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>myHelloServlet</servlet-name>
    <url-pattern>/register</url-pattern>
  </servlet-mapping>
  <context-param>
    <param-name>institute</param-name>
    <param-value>InfoCampus</param-value>
  </context-param>
  <filter>
    <filter-name>validation</filter-name>
    <filter-class>com.jm2181222.filter.ValidationFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>validation</filter-name>
    <url-pattern>/login</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>blocked</filter-name>
    <filter-class>com.jm2181222.filter.BlockedUserFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>blocked</filter-name>
    <url-pattern>/login</url-pattern>
  </filter-mapping>
</web-app>